package puissanceQuatre;


public class JoueurDefensif {

	public JoueurDefensif(Jeton jeton) {
		super(jeton);
	}

	public JoueurDefensif(String nom, Jeton jeton) {
		super(nom, jeton);
	}
	
	public int CompteVoisin(Coordonnee c) {
		int voisin = 0;
		int col = c.getColonne();
		int lig = c.getLigne();
		Coordonnee[] memoireAdversaire= adversaire.getMemoire(); 

		for(int i=0; i<= memoireAdversaire.length ; i++) {
			if(memoireAdversaire[i].getLigne() == lig) {
				if(memoireAdversaire[i].getColonne() == col+1 || memoireAdversaire[i].getColonne() == col-1)
					voisin ++;
			}
			if(memoireAdversaire[i].getLigne() == lig +1 ||memoireAdversaire[i].getLigne() == lig -1) {
				if(memoireAdversaire[i].getColonne() == col+1 || memoireAdversaire[i].getColonne() == col-1 || memoireAdversaire[i].getColonne() == col)
					voisin ++;
			}
		}
		return voisin;
	}
	
	public int CompteVoisinLoin(Coordonnee c) {
		int voisin = 0;
		int col = c.getColonne();
		int lig = c.getLigne();
		Coordonnee[] memoireAdversaire= adversaire.getMemoire();

		for(int i=0; i<= memoireAdversaire.length ; i++) {
			if(memoireAdversaire[i].getLigne() <= lig +2 || memoireAdversaire[i].getLigne() >= lig - 2) {
				if(memoireAdversaire[i].getColonne() <= col+2 || memoireAdversaire[i].getColonne() >= col-2)
					voisin ++;
			}
		}
		return voisin;
	}
	
	public int choixPlacement() {
		return 0;
	}
	
	protected void retourPlacement(int etat) {

	}
	
	protected void retourObservation(int etat) { 

	}

	public static void main(String[] args) {

	}

}
